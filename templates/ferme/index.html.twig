{% extends 'base.html.twig' %}

{% block title %}Ferme index{% endblock %}

{% block body %}
    <h1>Ferme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ferme in fermes %}
            <tr>
                <td>{{ ferme.id }}</td>
                <td>{{ ferme.nom }}</td>
                <td>
                    <a href="{{ path('app_ferme_show', {'id': ferme.id}) }}">show</a>
                    <a href="{{ path('app_ferme_edit', {'id': ferme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ferme_new') }}">Create new</a>
{% endblock %}
